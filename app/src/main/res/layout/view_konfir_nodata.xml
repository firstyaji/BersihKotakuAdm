<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgKonfir_noData"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:srcCompat="@drawable/img_konfir_nodata"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/konfir_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_konfir_title"
        app:layout_constraintTop_toBottomOf="@id/imgKonfir_noData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/konfir_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_konfir_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/konfir_title"
        android:layout_marginTop="13dp"
        style="@style/TextAppearance.AppCompat.Subhead"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />


</androidx.constraintlayout.widget.ConstraintLayout>